<h2>Daily Flight Schedule</h2>

<div id="search">
	<label for="keyword">Search:</label><input type="text" name="keyword" placeholder="Enter an Airport Code" size="30">
</div>

<table>
  <thead>
    <tr>
      <th>
      <th>Flight Number</th>
      <th>Leaves</th>
      <th>Time</th>
      <th>Arrives</th>
      <th>Time</th>
      <th>Seats Remaining</th>
      <th>Miles</th>
    </tr>
  </thead>
  <tbody>
	<% @flights.each do |flight| %>
    <tr>
      <td><%= link_to "Book Now", new_reservation_url(flight_id: flight.id) %></td>
      <td><%= flight.flight_number %></td>
      <td><%= flight.depart_code %></td>
      <td><%= flight.depart_time.strftime('%l:%M %P') %></td>
      <td><%= flight.arrival_code %></td>
      <td>--</td>
      <td>--</td>
      <td><%= flight.distance %></td>
			<% end %>
    </tr>
	</tbody>
</table>